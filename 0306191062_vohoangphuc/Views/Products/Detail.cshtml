@{
    ViewData["Title"] = "Detail";
    int spId = 0;

    var chatluongsp = ViewBag.ChatLuong;
    string temp;
    string[] star = null;
    int starhaft = 0;
    if(chatluongsp != null)
    {
        temp = chatluongsp.ToString();

        star = temp.Split('.');

        if(star.Length > 1)
            starhaft = Convert.ToInt32(star[1].Substring(0, 1));
        
    }

}
