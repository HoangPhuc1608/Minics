@model IEnumerable<_0306191062_vohoangphuc.Areas.Admin.Models.About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Danh sách Thông tin về chúng tôi</h4>
            <p class="card-description">
                <a class="btn btn-danger btn-rounded btn-fw" asp-action="Create">Thêm Thông tin</a>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TieuDe)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.MoTa)
                            </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.HinhAnh)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TrangThai)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.TieuDe)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.MoTa)
                                </td>*@
                                <td>
                                    <img style="height:200px; width:200px;" src="~/admin/assets/images/about/@item.HinhAnh" alt="image" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TrangThai)
                                </td>
                                <td>
                                    <a class="btn btn-success btn-rounded" style="width:90;" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-info btn-rounded" style="width:90;" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-danger btn-rounded" style="width:90;" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
