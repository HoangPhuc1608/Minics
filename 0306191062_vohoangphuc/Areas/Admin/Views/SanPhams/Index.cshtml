@model IEnumerable<_0306191062_vohoangphuc.Areas.Admin.Models.SanPham>

@{
    ViewData["Title"] = "Danh Sách Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Danh sách sản phẩm </h4>
            <p class="card-description">
                <a class="btn btn-danger btn-rounded btn-fw" asp-action="Create">Thêm Sản Phẩm</a>
            </p>
            <form asp-action="Index" method="get">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        @if (ViewBag.LoaiSanPhamId != null)
                        {
                            
                            <select name="LoaiSanPhamId"  onchange="this.form.submit()" asp-items="ViewBag.LoaiSanPhamId" id="inputState" class="form-control">
                                <option value="All">Tất cả
                                    </option>
                            </select>
                        }
                    </div>
                    <div class="form-group col-md-4">
                        
                    </div>
                    <div class="form-group col-md-2">
                    </div>
                    
                </div>
                
            </form>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.HinhAnh)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TenSanPham)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CongSuat)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.TocDoTangToc)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DongCo)
                            </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.MauNoiThat)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.CuaSoTroi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MoTa)
                            </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.Gia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SoLuongTon)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LoaiSanPham)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.TrangThai)
                            </th>*@
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/admin/assets/images/sanphams/@item.HinhAnh" style="width: 200px; height: 200px;" alt="image" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenSanPham)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CongSuat) kW
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.TocDoTangToc) Giây
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DongCo)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.MauNoiThat)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.CuaSoTroi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MoTa)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoLuongTon)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoai)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.TrangThai)
                                </td>*@
                                <td>
                                    <a class="btn btn-success btn-rounded" style="width:90;" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-info btn-rounded" style="width:90;" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-danger btn-rounded" style="width:90;" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
