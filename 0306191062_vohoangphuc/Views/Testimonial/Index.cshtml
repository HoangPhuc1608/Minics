@{
    ViewData["Title"] = "Testimonial";
}

<!-- client section -->

<section class="client_section layout_padding-bottom">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                What Says Our Customers
            </h2>
        </div>
    </div>
    <div class="client_container ">
        <div id="carouselExample2Controls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @foreach (var item in ViewBag.lstDanhGia)
                {
                    <div class="carousel-item @(ViewBag.IdActiveDanhGia == item.Id?"active":"")">
                        <div class="container">
                            <div class="box">
                                <div class="detail-box">
                                    <p>
                                        <i class="fa fa-quote-left" aria-hidden="true"></i>
                                    </p>
                                    <p>
                                        @item.LoiDanhGia
                                    </p>
                                </div>
                                <div class="client-id">
                                    <div class="img-box">
                                        <img src="~/admin/assets/images/users/@item.TaiKhoan.HinhAnh" style="width:70px;" alt="">
                                    </div>
                                    <div class="name">
                                        <h5>
                                            @item.TaiKhoan.HoVaTen
                                        </h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="carousel_btn-box">
                <a class="carousel-control-prev" href="#carouselExample2Controls" role="button" data-slide="prev">
                    <span>
                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                    </span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExample2Controls" role="button" data-slide="next">
                    <span>
                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                    </span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</section>
<!-- end client section -->
@section js {
    <script src="~/js/jquery-3.4.1.min.js">

    </script>
    <script src="~/js/bootstrap.js">

    </script>
    <script src="~/js/custom.js">

    </script>
}